{
  "name": "@iamnapo/construct-url",
  "version": "2.1.0",
  "description": "Small utility function to construct URLs, without caring about slashes or encoding",
  "keywords": [
    "construct",
    "url",
    "base",
    "path",
    "query",
    "query-params"
  ],
  "homepage": "https://github.com/iamnapo/construct-url#readme",
  "bugs": {
    "url": "https://github.com/iamnapo/construct-url/issues"
  },
  "repository": "github:iamnapo/construct-url",
  "license": "MIT",
  "author": {
    "name": "Napoleon-Christos Oikonomou",
    "email": "napoleonoikon@gmail.com",
    "url": "https://iamnapo.me"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts --cache",
    "prepare": "npm run build",
    "test": "npm run lint && ava"
  },
  "eslintConfig": {
    "extends": "iamnapo/typescript",
    "ignorePatterns": "dist"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "tests/*"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ],
    "nonSemVerExperiments": {
      "nextGenConfig": true,
      "configurableModuleFormat": true
    },
    "timeout": "1m"
  },
  "devDependencies": {
    "@iamnapo/tsconfig": "^1.0.0",
    "ava": "^3.15.0",
    "eslint": "^8.5.0",
    "eslint-config-iamnapo": "^20.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
